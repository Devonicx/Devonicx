generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model registration {
  id       Int     @id @default(autoincrement())
  username String
  password String  @unique
  admin    Boolean
  forms    Json
}

model token {
  id     Int    @id @default(autoincrement())
  token  String @db.VarChar(16380)
  userId Int
}

model recentRecords {
  id   Int    @id @default(autoincrement())
  type String
  time String
  data String @db.VarChar(16380)
}

model attendanceRecords {
  id           Int    @id @default(autoincrement())
  name         String
  date         String
  checkInTime  String
  checkOutTime String
}
